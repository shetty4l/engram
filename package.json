{
  "name": "engram",
  "version": "0.1.0",
  "description": "Persistent memory MCP server for AI agents",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "start": "bun run src/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint src/",
    "format": "biome check --write src/ test/",
    "format:check": "biome check src/ test/",
    "test": "bun test",
    "validate": "bun run typecheck && bun run lint && bun run format:check && bun test",
    "prepare": "husky"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/bun": "latest",
    "husky": "^9.0.0",
    "oxlint": "^0.12.0",
    "typescript": "^5.0.0"
  }
}
